<style>
  .show-modal {
    outline: none;
    border: none;
    cursor: pointer;
    color: #fff;
    border-radius: 6px;
    font-size: 1.2rem;
    padding: 15px 22px;
    background: #4a98f7;
    transition: 0.3s ease;
    box-shadow: 0 10px 18px rgba(52, 87, 220, 0.18);
  }
  .show-modal:hover {
    background: #2382f6;
  }
  .bottom-sheet {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: fit-content;
    display: flex;
    opacity: 0;
    pointer-events: none;
    align-items: center;
    flex-direction: column;
    justify-content: flex-end;
    transition: 0.1s linear;
    border-radius: 24px 24px 0 0;
  }
  .bottom-sheet.show {
    opacity: 1;
    pointer-events: auto;
  }
  .bottom-sheet .sheet-overlay {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.2;
    background: #000;
  }
  .bottom-sheet .content {
    z-index: 1;
    max-width: 95%;
    position: relative;
    background: #fff;
    min-height: 80px;
    height: 10vh;
    max-width: 1150px;
    padding: 5px 30px;
    transform: translateY(100%);
    border-radius: 24px 24px 0 0;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.03);
    transition: 0.3s ease;
    border-bottom: 2px solid #fff;
  }
  .bottom-sheet.show .content {
    transform: translateY(0%);
  }
  .bottom-sheet.dragging .content {
    transition: none;
  }
  .bottom-sheet.fullscreen .content {
    border-radius: 0;
    overflow-y: hidden;
  }
  .bottom-sheet .header {
    display: flex;
    justify-content: center;
    user-select: none;
  }

  .header {
    cursor: grab;
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  .header .drag-icon {
    cursor: grab;
    user-select: none;
    padding: 15px;
    margin-top: -5px;
  }
  .header .drag-icon span {
    user-select: none;
    height: 8px;
    width: 96px;
    display: block;
    background: #c7d0e1;
    border-radius: 48px;
  }
  .bottom-sheet .body {
    height: 100%;
    padding: 0 1rem;
    scrollbar-width: none;
  }

  .scroll .body {
    overflow-y: auto;
  }
  .bottom-sheet .body::-webkit-scrollbar {
    width: 0;
  }
  .bottom-sheet .body h2 {
    font-size: 1.8rem;
  }
  .bottom-sheet .body p {
    margin-top: 20px;
    font-size: 1.05rem;
  }
</style>
